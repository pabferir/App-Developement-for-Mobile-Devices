<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pabferir.dashboardactivity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pabferir.activities.SettingsActivity"
            android:label="@string/settings_activity_name"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:parentActivityName="com.pabferir.activities.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pabferir.activities.DashboardActivity"/>
        </activity>
        <activity
            android:name="com.pabferir.activities.FavouriteActivity"
            android:label="@string/favs_activity_name"
            android:parentActivityName="com.pabferir.activities.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pabferir.activities.DashboardActivity"/>
        </activity>
        <activity
            android:name="com.pabferir.activities.AboutActivity"
            android:label="@string/about_activity_name"
            android:parentActivityName="com.pabferir.activities.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pabferir.activities.DashboardActivity"/>
        </activity>
        <activity
            android:name="com.pabferir.activities.QuotationActivity"
            android:label="@string/random_activity_name"
            android:parentActivityName="com.pabferir.activities.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pabferir.activities.DashboardActivity"/>
        </activity>
        <activity
            android:name="com.pabferir.activities.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>